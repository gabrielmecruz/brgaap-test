    <ObjectHeader
      fullScreenOptimized="true"
      responsive="true"
      title="Nota Fiscal #{invoice>id}"
      intro="Nome: {invoice>title}">
        <ObjectAttribute title="User ID" text="{invoice>userId}"/>
        <ObjectAttribute title="Completado" text="{= ${invoice>completed} === true ? 'Sim' : 'NÃ£o' }"/>
    </ObjectHeader>
    </Panel>
  </Page>
</mvc:View>